<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_activity_margin"
    android:orientation="vertical"
    tools:context=".GameplayActivity">

    <TextView
        style="@style/Theme.TextViewLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_picked_fruits" />

    <LinearLayout
        android:id="@+id/linearLayoutAppSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" />

    <TextView
        style="@style/Theme.TextViewLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/player_picked_fruits" />

    <LinearLayout
        android:id="@+id/linearLayoutPlayerSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/linearLayoutFruitComparison"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/buttonRevealResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/revelar_resultado" />

</LinearLayout>
