<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FruitGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Result activity theme. -->
    <style name="Theme.ResultActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#757ce8</item>
        <item name="colorPrimaryVariant">#3f50b5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ff7961</item>
        <item name="colorSecondaryVariant">#f44336</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat.ImageViewFruit" parent="Theme.AppCompat">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_image_placeholder</item>
    </style>

    <style name="Theme.AppCompat.ImageCheckFruit" parent="Theme.AppCompat">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/imagecheck_unchecked_background</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/imageView_placeholder</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_image_placeholder</item>
    </style>

    <style name="Theme.TextViewFruit" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="Theme.TextViewLarge" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_activity_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_activity_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>
</resources>
